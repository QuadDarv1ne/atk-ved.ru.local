{
  "name": "atk-ved-theme",
  "version": "3.3.0",
  "description": "АТК ВЭД - тема WordPress с оптимизацией производительности",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:webp": "node scripts/generate-webp.js",
    "critical": "node scripts/critical-css.js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "eslint '**/*.js'",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "format": "prettier --write '**/*.{css,js,json}'",
    "format:check": "prettier --check '**/*.{css,js,json}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "vite": "^5.4.0",
    "@rollup/plugin-concat": "^1.2.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.47",
    "terser": "^5.34.1",
    "sharp": "^0.33.5",
    "glob": "^11.0.0",
    "critical": "^7.0.0",
    "eslint": "^9.12.0",
    "stylelint": "^16.10.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "jquery": "^3.7.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "wordpress",
    "theme",
    "performance",
    "optimization"
  ],
  "author": "ATK VED",
  "license": "GPL-2.0-or-later"
}
