{
  "name": "atk-ved/theme",
  "description": "АТК ВЭД — современная тема WordPress для логистической компании",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "ATK VED Team",
      "email": "dev@atk-ved.ru"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "ATKVed\\": "src/"
    },
    "files": [
      "inc/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ATKVed\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpcbf": "phpcbf --standard=PSR12 src/",
    "phpstan": "phpstan analyse src/ --level=5",
    "test": "phpunit",
    "post-autoload-dump": [
      "@php -r \"file_exists('vendor/autoload.php') && require 'vendor/autoload.php';\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
