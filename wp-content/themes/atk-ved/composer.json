{
  "name": "atk-ved/theme",
  "type": "wordpress-theme",
  "description": "АТК ВЭД — современная тема WordPress для логистической компании",
  "homepage": "https://atk-ved.ru",
  "version": "3.3.0",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "ATK VED Team",
      "email": "info@atk-ved.ru",
      "homepage": "https://atk-ved.ru"
    }
  ],
  "support": {
    "issues": "https://github.com/atk-ved/theme/issues",
    "source": "https://github.com/atk-ved/theme"
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "ATKVed\\": "src/"
    },
    "files": [
      "version.php",
      "inc/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ATKVed\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": "composer dump-autoload -o",
    "post-update-cmd": "composer dump-autoload -o",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs --standard=WordPress src/",
    "phpcbf": "phpcbf --standard=WordPress src/",
    "lint": "phpcs && phpstan",
    "fix": "phpcbf",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html=coverage"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.1"
    },
    "sort-packages": true
  }
}
