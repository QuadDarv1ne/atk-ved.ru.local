{
  "name": "atk-ved/theme",
  "type": "wordpress-theme",
  "description": "АТК ВЭД — современная тема WordPress для логистической компании",
  "keywords": ["wordpress", "theme", "logistics", "china", "marketplace"],
  "homepage": "https://atk-ved.ru",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "ATK VED Team",
      "email": "info@atk-ved.ru"
    }
  ],
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpunit": "^10.5",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/extension-installer": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "ATKVed\\": "src/"
    },
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ATKVed\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=512M",
    "phpstan-generate-baseline": "phpstan analyse --generate-baseline --allow-empty-baseline",
    "phpstan-baseline": "phpstan analyse --generate-baseline --allow-empty-baseline",
    "phpcs": "phpcs --standard=WordPress",
    "phpcbf": "phpcbf --standard=WordPress",
    "phpunit": "phpunit --colors=always",
    "phpunit-coverage": "phpunit --coverage-html coverage/",
    "test": [
      "@phpstan",
      "@phpcs",
      "@phpunit"
    ],
    "test:quick": [
      "@phpstan",
      "@phpunit"
    ],
    "test:coverage": "@phpunit-coverage",
    "format": "@phpcbf",
    "compat": "phpcs --standard=PHPCompatibilityWP -p --extensions=php --runtime-set testVersion 8.1-",
    "clean": [
      "composer dump-autoload --optimize",
      "composer clear-cache"
    ],
    "post-install-cmd": [
      "@composer dump-autoload --optimize --classmap-authoritative"
    ],
    "post-update-cmd": [
      "@composer dump-autoload --optimize --classmap-authoritative"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "platform": {
      "php": "8.1"
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": {
      "*": "dist"
    }
  },
  "extra": {
    "installer-paths": {
      "../../plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
