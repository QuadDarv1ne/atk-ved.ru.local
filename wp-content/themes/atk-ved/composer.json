{
  "name": "atk-ved/theme",
  "type": "wordpress-theme",
  "description": "АТК ВЭД — современная тема WordPress для логистической компании",
  "homepage": "https://atk-ved.ru",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "ATKVed\\": "src/"
    },
    "files": [
      "inc/helpers.php"
    ]
  },
  "scripts": {
    "post-install-cmd": "composer dump-autoload -o",
    "post-update-cmd": "composer dump-autoload -o",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs --standard=WordPress src/",
    "phpcbf": "phpcbf --standard=WordPress src/",
    "lint": "phpcs && phpstan",
    "fix": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.1"
    }
  }
}
