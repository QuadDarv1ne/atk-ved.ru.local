<?xml version="1.0"?>
<ruleset name="ATK VED Theme">
    <description>WordPress coding standards for ATK VED theme</description>

    <!-- Файлы для проверки -->
    <file>functions.php</file>
    <file>inc/</file>
    <file>admin/</file>

    <!-- Исключения -->
    <exclude-path>vendor/</exclude-path>
    <exclude-path>node_modules/</exclude-path>

    <!-- Стандарт -->
    <rule ref="WordPress">
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed" />
    </rule>

    <!-- Дополнительные правила -->
    <rule ref="WordPress.Security.EscapeOutput" />
    <rule ref="WordPress.Arrays.MultipleStatementAlignment" />

    <!-- Игнорирование специфичных ошибок -->
    <exclude name="WordPress.Files.FileName" />
</ruleset>
