<?xml version="1.0"?>
<ruleset name="ATK VED Theme - Classes">
    <description>PSR-12 coding standards for ATK VED theme classes</description>

    <!-- Файлы для проверки -->
    <file>src/</file>

    <!-- Исключения -->
    <exclude-path>vendor/</exclude-path>

    <!-- Стандарт PSR-12 -->
    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.IncorrectOrder" />
    </rule>

    <!-- Дополнительные правила -->
    <rule ref="SlevomatCodingStandard.TypeHints" />
    <rule ref="SlevomatCodingStandard.Functions" />
</ruleset>
