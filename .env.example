# WordPress Environment Configuration
# Скопируйте этот файл в .env и настройте под свои нужды

# ============================================
# БАЗА ДАННЫХ
# ============================================
WP_DB_NAME=atk_ved
WP_DB_USER=root
WP_DB_PASSWORD=
WP_DB_HOST=localhost

# Префикс таблиц (по умолчанию wp_)
WP_TABLE_PREFIX=wp_

# ============================================
# РЕЖИМ ОТЛАДКИ
# ============================================
# Включайте только для разработки!
# На продакшене должно быть false

# Включить режим отладки (true/false)
WP_DEBUG=false

# Логировать ошибки в файл wp-content/debug.log (true/false)
WP_DEBUG_LOG=false

# Показывать ошибки на экране (true/false)
# ВАЖНО: На продакшене должно быть false!
WP_DEBUG_DISPLAY=false

# ============================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# ============================================
# Раскомментируйте для настройки

# Лимит памяти WordPress (по умолчанию 256M)
# WP_MEMORY_LIMIT=256M

# Максимальный лимит памяти для админки
# WP_MAX_MEMORY_LIMIT=512M

# Включить кэширование
# WP_CACHE=true

# ============================================
# БЕЗОПАСНОСТЬ
# ============================================
# Раскомментируйте для продакшена

# Запретить редактирование файлов через админку
# DISALLOW_FILE_EDIT=true

# Запретить установку плагинов/тем
# DISALLOW_FILE_MODS=true

# Принудительное использование SSL в админке
# FORCE_SSL_ADMIN=true

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================

# Автосохранение (в секундах, по умолчанию 60)
# AUTOSAVE_INTERVAL=300

# Количество ревизий постов (по умолчанию неограничено)
# WP_POST_REVISIONS=3

# Корзина (в днях, по умолчанию 30)
# EMPTY_TRASH_DAYS=7

# ============================================
# ПРИМЕЧАНИЯ
# ============================================
# 
# 1. Не добавляйте .env в git! Он уже в .gitignore
# 2. Для продакшена создайте отдельный .env с безопасными настройками
# 3. Значения true/false автоматически конвертируются в boolean
# 4. Пустые значения конвертируются в false
# 5. Все константы можно переопределить в wp-config.php
